layout {
    gaps 5
    background-color "transparent"
    center-focused-column "on-overflow"
    preset-column-widths {
        proportion 0.25
        proportion 0.5
        proportion 0.75
    }
    border {
        on
        width 2
    }
    focus-ring {
        off
    }
    shadow {
        off
    }
    tab-indicator {
        off
    }
}

overview {
    zoom 0.7
    workspace-shadow {
        off
    }
}

animations {
    workspace-switch {
        duration-ms 300
        curve "cubic-bezier" 0.05 0.9 0.1 1.05
    }
    horizontal-view-movement {
        duration-ms 300
        curve "cubic-bezier" 0.05 0.9 0.1 1.05
    }
    window-open {
        duration-ms 300
        curve "cubic-bezier" 0.05 0.7 0.1 1.0
    }
    window-close {
        duration-ms 150
        curve "cubic-bezier" 0.05 0.7 0.1 1.0
    }
    window-movement {
        duration-ms 300
        curve "cubic-bezier" 0.05 0.9 0.1 1.05
    }
    screenshot-ui-open {
        duration-ms 500
        curve "cubic-bezier" 0.05 0.7 0.1 1.0
    }
    exit-confirmation-open-close {
        duration-ms 300
        curve "cubic-bezier" 0.05 0.7 0.1 1.0
    }
    config-notification-open-close {
        duration-ms 300
        curve "cubic-bezier" 0.05 0.7 0.1 1.0
    }
}

recent-windows {
    off
}
